---
import { handleSubmit } from "../handlers/contactForm.js";
import MagneticButton from "./ui/MagneticButton.astro";
---

<form
  id="contactForm"
  class="max-w-lg mx-auto mt-8 space-y-6"
  @onsubmit={handleSubmit}
>
  <div class="group">
    <label
      for="name"
      class="block text-sm font-medium text-zinc-400 group-focus-within:text-purple-400 transition-colors mb-2 text-left"
      >Nombre</label
    >
    <input
      type="text"
      id="name"
      name="name"
      class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-zinc-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
      placeholder="Tu nombre"
      required
    />
  </div>

  <div class="group">
    <label
      for="email"
      class="block text-sm font-medium text-zinc-400 group-focus-within:text-purple-400 transition-colors mb-2 text-left"
      >Correo electrónico</label
    >
    <input
      type="email"
      id="email"
      name="email"
      class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-zinc-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
      placeholder="tu@email.com"
      required
    />
  </div>

  <div class="group">
    <label
      for="subject"
      class="block text-sm font-medium text-zinc-400 group-focus-within:text-purple-400 transition-colors mb-2 text-left"
      >Asunto</label
    >
    <input
      type="text"
      id="subject"
      name="subject"
      class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-zinc-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
      placeholder="¿De qué quieres hablar?"
      required
    />
  </div>

  <div class="group">
    <label
      for="message"
      class="block text-sm font-medium text-zinc-400 group-focus-within:text-purple-400 transition-colors mb-2 text-left"
      >Mensaje</label
    >
    <textarea
      id="message"
      name="message"
      rows="4"
      class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-zinc-600 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all resize-none"
      placeholder="Cuéntame sobre tu proyecto..."
      required></textarea>
  </div>

  <div class="pt-4">
    <MagneticButton class="w-full">
      <button
        type="submit"
        class="w-full py-4 bg-gradient-to-r from-purple-600 to-orange-500 text-white font-bold rounded-full hover:shadow-lg hover:shadow-purple-500/20 transition-all transform hover:-translate-y-1"
      >
        Enviar Mensaje
      </button>
    </MagneticButton>
  </div>
</form>
