---
import ReactIcon from "../icons/projectsicons/React.astro";
import ExpressIcon from "../icons/projectsicons/Express.astro";
import AwsIcon from "../icons/projectsicons/Aws.astro";
import TailwindIcon from "../icons/projectsicons/Tailwind.astro";

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-black text-white border border-gray-50 hover:bg-gray-500",
    icon: ReactIcon,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-black text-white border border-gray-50 hover:bg-gray-500",
    icon: ExpressIcon,
  },
  AWS: {
    name: "AWS",
    class: "bg-black text-white border border-gray-50 hover:bg-gray-500",
    icon: AwsIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-black text-white border border-gray-50 hover:bg-gray-500",
    icon: TailwindIcon,
  },
};
const PROJECTS = [
  {
    title: "Plantz",
    description:
      " Aplicación Web de Gestión de Especies del Mundo Plantae segun su Taxonomía.",
    link: "#",
    github: "https://github.com/2k12/Plantz",
    image: "/projects/plantz.webp",
    tags: [TAGS.REACT, TAGS.EXPRESS, TAGS.AWS, TAGS.TAILWIND],
  },
];
---

<div>
  {
    PROJECTS.map(({ image, title, description, tags }) => (
      <article>
        <img
          class="rounded-lg w-4/5 shadow-2xl shadow-white/10 mb-5 "
          src={image}
          alt={`Captura de Pantalla del Proyecto ${image}`}
        />
        <h3 class="text-2xl font-semibold text-blue-300 mb-1">{title}</h3>
        <p class="text-lg mb-4 text-pretty text-white dark:text-white">
          {description}
        </p>
        <div class="overflow-x-auto  scrollbar-hidden">
          <ul class="flex gap-x-4 flex-row mb-5 ">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs  py-1 px-2 ${tag.class}`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
      </article>
    ))
  }
</div>
