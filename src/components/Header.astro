---
const initialPath = Astro.url.pathname.replace(/\/$/, "");
---

<header
  class="fixed top-0 z-50 w-full transition-all duration-300"
  id="main-header"
>
  <div
    class="absolute inset-0 bg-black/10 backdrop-blur-md border-b border-white/5 transition-opacity duration-300"
    id="header-bg"
  >
  </div>

  <nav
    class="relative mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5 text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-orange-400"
      >
        JP
      </a>
    </div>

    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-300 hover:text-white"
        id="mobile-menu-btn"
      >
        <span class="sr-only">Abrir menú principal</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>

    <div class="hidden lg:flex lg:gap-x-12">
      <a
        href="/"
        class={`text-sm font-medium tracking-wide transition-colors duration-300 ${initialPath === "" ? "text-white" : "text-zinc-400 hover:text-white"}`}
        >Inicio</a
      >
      <a
        href="/experience"
        class={`text-sm font-medium tracking-wide transition-colors duration-300 ${initialPath === "/experience" ? "text-white" : "text-zinc-400 hover:text-white"}`}
        >Experiencia</a
      >
      <a
        href="/projects"
        class={`text-sm font-medium tracking-wide transition-colors duration-300 ${initialPath === "/projects" ? "text-white" : "text-zinc-400 hover:text-white"}`}
        >Proyectos</a
      >
      <a
        href="/activities"
        class={`text-sm font-medium tracking-wide transition-colors duration-300 ${initialPath === "/activities" ? "text-white" : "text-zinc-400 hover:text-white"}`}
        >Actividades</a
      >
      <a
        href="/contact"
        class={`text-sm font-medium tracking-wide transition-colors duration-300 ${initialPath === "/contact" ? "text-white" : "text-zinc-400 hover:text-white"}`}
        >Contacto</a
      >
    </div>

    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <!-- Space for potential future CTA or language switch -->
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div
    class="lg:hidden hidden"
    role="dialog"
    aria-modal="true"
    id="mobile-menu"
  >
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50 bg-black/80 backdrop-blur-sm"></div>

    <div
      class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-zinc-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/10"
    >
      <div class="flex items-center justify-between">
        <a
          href="/"
          class="-m-1.5 p-1.5 text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-orange-400"
        >
          JP
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-400 hover:text-white"
          id="close-menu-btn"
        >
          <span class="sr-only">Cerrar menú</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-4 py-6">
            <a
              href="/"
              class="-mx-3 block rounded-lg px-3 py-2 text-lg font-medium tracking-wide text-white hover:bg-zinc-800 transition-colors"
              >Inicio</a
            >
            <a
              href="/experience"
              class="-mx-3 block rounded-lg px-3 py-2 text-lg font-medium tracking-wide text-white hover:bg-zinc-800 transition-colors"
              >Experiencia</a
            >
            <a
              href="/projects"
              class="-mx-3 block rounded-lg px-3 py-2 text-lg font-medium tracking-wide text-white hover:bg-zinc-800 transition-colors"
              >Proyectos</a
            >
            <a
              href="/activities"
              class="-mx-3 block rounded-lg px-3 py-2 text-lg font-medium tracking-wide text-white hover:bg-zinc-800 transition-colors"
              >Actividades</a
            >
            <a
              href="/contact"
              class="-mx-3 block rounded-lg px-3 py-2 text-lg font-medium tracking-wide text-white hover:bg-zinc-800 transition-colors"
              >Contacto</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import { gsap } from "../animations/core";

  // import { gsap } from "../animations/core"; // Already imported above

  document.addEventListener("astro:page-load", () => {
    const header = document.getElementById("main-header");
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const closeMenuBtn = document.getElementById("close-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLinks = mobileMenu?.querySelectorAll("a");

    // Scroll Effect
    window.addEventListener("scroll", () => {
      if (window.scrollY > 20) {
        header?.classList.add("shadow-lg");
        header?.querySelector("#header-bg")?.classList.remove("opacity-0");
        header?.querySelector("#header-bg")?.classList.add("opacity-100");
      } else {
        header?.classList.remove("shadow-lg");
      }
    });

    // Mobile Menu Logic
    function toggleMenu() {
      const isHidden = mobileMenu?.classList.contains("hidden");
      if (isHidden) {
        mobileMenu?.classList.remove("hidden");
        // Animate in
        gsap.fromTo(
          "#mobile-menu > div:nth-child(2)",
          { x: "100%" },
          { x: 0, duration: 0.3, ease: "power2.out" },
        );
      } else {
        // Animate out
        gsap.to("#mobile-menu > div:nth-child(2)", {
          x: "100%",
          duration: 0.3,
          ease: "power2.in",
          onComplete: () => mobileMenu?.classList.add("hidden"),
        });
      }
    }

    mobileMenuBtn?.addEventListener("click", toggleMenu);
    closeMenuBtn?.addEventListener("click", toggleMenu);

    // Auto-close on link click
    menuLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        if (!mobileMenu?.classList.contains("hidden")) {
          toggleMenu();
        }
      });
    });
  });
</script>
